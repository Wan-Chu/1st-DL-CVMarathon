   ],
   "source": [
    "import cv2\n",
    "img_path = 'lena.png'\n",
    "img=cv2.imread(img_path)\n",
    "# 看圖片維度\n",
    "print(img.shape)\n",
    "#切分成三維度 順序是bgr不是rgb\n",
    "b,g,r=cv2.split(img)\n",
    "merged=cv2.merge([b,g,r])\n",
    "cv2.imshow('bgr',img)\n",
    "cv2.imshow('blue',b)\n",
    "cv2.imshow('green',g)\n",
    "cv2.imshow('red',r)\n",
    "k=cv2.waitKey(0)\n",
    "cv2.destroyAllWindows()"
   ]
